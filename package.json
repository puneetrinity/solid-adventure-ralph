{
  "name": "arch-orchestrator",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "start:api": "npm --workspace apps/api run start",
    "start:worker": "npm --workspace apps/worker run start",
    "start:web": "npm --workspace apps/web run start",
    "dev:api": "npm --workspace apps/api run start:dev",
    "dev:worker": "npm --workspace apps/worker run start:dev",
    "dev:web": "npm --workspace apps/web run dev",
    "lint": "npm run -ws lint",
    "typecheck": "npm run -ws typecheck",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:cov": "jest --coverage",
    "test:e2e": "playwright test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "npm run changelog && git add CHANGELOG.md",
    "release": "npm version"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@playwright/test": "^1.55.0",
    "conventional-changelog-cli": "^5.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@octokit/auth-app": "^8.2.0",
    "@octokit/rest": "^22.0.1",
    "jsonwebtoken": "^9.0.3"
  }
}
