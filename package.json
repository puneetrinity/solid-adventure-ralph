{
  "name": "arch-orchestrator",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "start:api": "npm --workspace apps/api run start",
    "start:worker": "npm --workspace apps/worker run start",
    "dev:api": "npm --workspace apps/api run start:dev",
    "dev:worker": "npm --workspace apps/worker run start:dev",
    "lint": "npm run -ws lint",
    "typecheck": "npm run -ws typecheck",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
